<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/login.css' />
  </head>
  <body>
		<!-- <form action="" class="login_body" method="post"> -->
		<div class="login_body">
			<div class="login_hd">
				<img src="../images/shopex.png" alt="">
			</div>
			<div class="center_wrap">
				<div class="title">
					<img src="../images/ecshop-logo.png" alt="">
				</div>
				<div class="login_start">
					<div class="login_input">
						<h3></h3>
						<div class="first">
							<input type="text" name="username" class="username" placeholder="用户名" id="username">
						</div>
						<div class="second">
							<input type="password" name="psw" class="psw" placeholder="密码" id="psw">
						</div>
						<div class="third">
							<input type="text" class="code" placeholder="验证码">
						</div>
						<div class="last">
							<input type="submit" class="btn" onclick="login()" value="登录">
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- </form> -->
  </body>
</html>
<script src="javascripts/public.js"></script>
<script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
<script>
		function login() {
		$.ajax({
			url: "/xiangmu/userlogin",
			type: "post",
			data: {
				username: $("#username").val(),
				psw: $("#psw").val()
			},
			success: function(res) {
				console.log(res);
					if(res.status == 1) {
					location.href = "/index";
				} else {
					alert(res.message);
					location.reload();
				}
			}
		})
	}

</script>
